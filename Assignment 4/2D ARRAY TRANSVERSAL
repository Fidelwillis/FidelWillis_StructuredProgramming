#include <stdio.h>

int main(){
    int matrix[6][4];

    printf("Input elements for the 2D matrix: \n");
    for (int i = 0; i < 6; i++)
    {
        for (int j = 0; j < 4; j++)
        {
            scanf("%d", &matrix[i][j]);
        }
    
    }
    
    printf("The 2D matrix looks like: \n");

    for (int i = 0; i < 6; i++)
    {
        for (int j = 0; j < 4; j++)
        {
            printf("%d\t", matrix[i][j]);
        }
        printf("\n");
    }
    return 0;
}
