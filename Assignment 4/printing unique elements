#include <stdio.h>

int main() {
    int numbers[10], n, value, position;

    printf("Enter the size of array : ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Enter integer elements: \n");
        scanf("%d", &numbers[i]);
    }

    printf("The current list of the array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", numbers[i]);
    }

    printf("\nInput the value to be inserted : ");
    scanf("%d", &value);
    printf("Input the Position, where the value to be inserted : ");
    scanf("%d", &position);

    for (int i = n; i >= position; i--) {
        numbers[i] = numbers[i - 1];
    }

    numbers[position - 1] = value;

    n++;

    printf("After Insert the element the new list is: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", numbers[i]);
    }

    return 0;
}

